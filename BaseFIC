import pandas as pd
import numpy as np
from faker import Faker
import random
from datetime import datetime, timedelta

# Inicializa Faker e define a localidade para gerar CPFs brasileiros
fake = Faker('pt_BR')

# Função para gerar uma data aleatória entre dois intervalos
def random_date(start, end):
    return start + timedelta(days=random.randint(0, (end - start).days))

# Definir os parâmetros do CSV fictício
num_rows = 1000  # Número de linhas que você quer no CSV
start_date = datetime(2024, 1, 1)
end_date = datetime(2024, 9, 1)

# Gerar dados aleatórios para cada coluna
cpfs = [fake.cpf() for _ in range(num_rows)]  # Gera CPFs aleatórios
boolean_column = np.random.choice([True, False], num_rows)  # Gera True ou False aleatoriamente
cod_pol = np.random.randint(0, 26, num_rows)  # Gera números inteiros entre 0 e 25
date_insert = [random_date(start_date, end_date) for _ in range(num_rows)]  # Gera datas aleatórias

# Criar DataFrame com os dados gerados
df = pd.DataFrame({
    'CPF': cpfs,
    'BOOLEAN': boolean_column,
    'COD. POL.': cod_pol,
    'DATA INSERT': date_insert
})

df.to_csv('dados_ficticios.csv', sep=',', index=False)
